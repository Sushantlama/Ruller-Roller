<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    android:id="@+id/main_layout"
    tools:context="com.rull2rrller.MainActivity">


    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/unit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/unit"
        android:layout_above="@+id/unit"
        />
    <ImageView
        android:id="@+id/backGround2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:layout_centerHorizontal="true"
        android:translationY="3dp"
        android:visibility="invisible"
        android:layout_above="@id/unit"/>
    <TextView
        android:id="@+id/numbers2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:rotation="270"
        android:translationY="3dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/unit"
        />


    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/unit"
        android:layout_below="@+id/base"/>
    <ImageView
        android:id="@+id/backGround1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:layout_centerHorizontal="true"
        android:translationY="3dp"
        android:visibility="invisible"
        android:layout_above="@id/head"/>
    <TextView
        android:id="@+id/numbers1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:rotation="270"
        android:translationY="3dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/head"
        />
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unit"
        android:src="@drawable/bottom"/>
    <ImageView
        android:id="@+id/base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:src="@drawable/first"/>
    <ImageView
        android:id="@+id/dark"
        android:layout_marginTop="-3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base"
        android:layout_centerHorizontal="true"
        android:src="@drawable/band"/>
    <ImageView
        android:id="@+id/point_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/points"
        />
    <ImageView
        android:id="@+id/crown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:src="@drawable/crown"
        />
    <ImageView
        android:id="@+id/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/point_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/second"/>
    <TextView
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="22dp"
        tools:text="100000"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_points"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />
    <TextView
        android:id="@+id/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="60dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/unit"
        android:layout_marginStart="60dp" />

</RelativeLayout>